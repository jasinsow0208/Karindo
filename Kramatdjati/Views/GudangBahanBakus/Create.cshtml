@model Kramatdjati.Models.GudangBahanBaku

@{
    ViewBag.Title = "Create";
}

<h2>Tambah</h2>
<h3>@ViewBag.Gudang</h3>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.GudangID,  new { Value = ViewBag.GudangID }) 
        @Html.HiddenFor(model => model.Jumlah , new { Value = 0 })
        
        <div class="form-group">
            @Html.LabelFor(model => model.BahanBakuID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("BahanBakuID", null, htmlAttributes: new { @class = "form-control" })
                <label id="NamaBarang" class="control-label "></label>
                @Html.ValidationMessageFor(model => model.BahanBakuID, "", new { @class = "text-danger" })
            </div>
        </div>
   
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", new { id = ViewBag.GudangID })
</div>
