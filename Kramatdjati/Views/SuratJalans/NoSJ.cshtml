@model Kramatdjati.Models.SuratJalan

@{
    ViewBag.Title = "NoSJ";
}

<h2>Ubah No. Surat Jalan</h2>
<h4>Surat Jalan</h4>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.SuratJalanID)
        @Html.HiddenFor(model => model.GudangID)
        @Html.HiddenFor(model => model.ContactID)
        @Html.HiddenFor(model => model.tglSuratJalan)
        @Html.HiddenFor(model => model.TglTransaksi)
        @Html.HiddenFor(model => model.TglTerima)
        @Html.HiddenFor(model => model.Penerima)
        @Html.HiddenFor(model => model.Posting)
        @Html.HiddenFor(model => model.TglPosting)
        @Html.HiddenFor(model => model.Catatan)
        @Html.HiddenFor(model => model.Closed)
        @Html.HiddenFor(model => model.Cetak)
        @Html.HiddenFor(model => model.User)
        @Html.HiddenFor(model => model.Gudang)

       

        <div class="form-group">
            @Html.LabelFor(model => model.NoSuratJalan, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NoSuratJalan, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NoSuratJalan, "", new { @class = "text-danger" })
            </div>
        </div>
      
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
