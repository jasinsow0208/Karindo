@model IEnumerable <Kramatdjati.Models.GLBatchView>

@{
    ViewBag.Title = "Index";
}

<h2>Batch Jurnal Umum</h2>

<p>
    @Html.ActionLink("Tambah", "Create",null, new { @class = "btn btn-default" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.tblGLBatchId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TglKerja)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccYear)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccPeriod)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Keterangan)
        </th>
        <th class="text-right ">
            @Html.DisplayNameFor(model => model.Debet)
        </th>
        <th class="text-right ">
            @Html.DisplayNameFor(model => model.Kredit)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.tblGLBatchId  )
        </td>
        <td>
            @string.Format("{0:d}",item.TglKerja)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccYear)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccPeriod)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Keterangan )
        </td>
         <td class="text-right ">
             @string.Format("{0:N2}", item.Debet )
            
        </td>
         <td class="text-right ">
            @string.Format("{0:N2}", item.Kredit )
        </td>  
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.tblGLBatchId }, new { @class = "btn btn-xs btn-primary" }) 
            @Html.ActionLink("Details", "Index", "tblGLBatchDetails", new { id = item.tblGLBatchId }, new { @class = "btn btn-xs btn-primary" }) 
            @Html.ActionLink("Delete", "Delete", new { id = item.tblGLBatchId }, new { @class = "btn btn-xs btn-danger" })
            @if (item.Debet == item.Kredit && item.Debet!=0)
            {
                @Html.ActionLink("Posting", "Details", new { id = item.tblGLBatchId }, new { @class = "btn btn-xs btn-primary" })
            }
        </td>
    </tr>
}

</table>
