@model Kramatdjati.Models.PembayaranSODetail

@{
    ViewBag.Title = "Create";
}

<h2>Tambah</h2>
<h4>Pembayaran per Faktur</h4>
<hr />
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(x=>x.PembayaranSOID, new { Value = ViewBag.PembayaranSOID })
     
        <div class="form-group">
            @Html.LabelFor(model => model.FakturJualID, "No. Faktur", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("FakturJualID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FakturJualID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Jumlah, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @{Html.EnableClientValidation(false);}
                @Html.EditorFor(model => model.Jumlah, new { htmlAttributes = new { @class = "form-control" , Value=ViewBag.Sisa} })
                @{Html.EnableClientValidation(true);}
                @Html.ValidationMessageFor(model => model.Jumlah, "", new { @class = "text-danger" })
            </div>
        </div>

          <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", "PembayaranSODetails", new { id = @ViewBag.PembayaranSOID },null)
</div>
