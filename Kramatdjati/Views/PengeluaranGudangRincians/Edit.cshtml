@model Kramatdjati.Models.SuratJalanRincian

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<h4>Perincian Pengeluaran Gudang</h4>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.SuratJalanRincianID)
        @Html.HiddenFor(model=>model.SuratJalanID )
        @Html.HiddenFor(model=>model.SalesOrderRincianID )
    
        <h4>@ViewBag.Barang</h4>
