                @{ Html.EnableClientValidation(false); }
                @Html.EditorFor(model => model.JumlahDikirim, new { htmlAttributes = new { @class = "form-control" } })
                @{ Html.EnableClientValidation(true); }
                @Html.ValidationMessageFor(model => model.JumlahDikirim, "", new { @class = "text-danger" })
            </div>
        </div>

          <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index",  new { id = @ViewBag.SuratJalanID })
</div>
