@model IEnumerable<Kramatdjati.Models.SuratJalan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutTable.cshtml";
}

<h2>Pengeluaran Gudang</h2>

<table class="table">
    <thead>
        <tr>
            @*<th>
                @Html.DisplayNameFor(model => model.salesOrder.NoSO)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.contact.Perusahaan) 
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NoSuratJalan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tglSuratJalan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Catatan)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @*<td>
                    @Html.DisplayFor(modelItem => item.salesOrder.NoSO)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.contact.Perusahaan )
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NoSuratJalan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tglSuratJalan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Catatan)
                </td>
                <td>
                    @if (User.IsInRole("Gudang"))
                    {
                        @Html.ActionLink("Details", "Index", "PengeluaranGudangRincians", new { id = item.SuratJalanID }, new { @class = "btn btn-primary" })
                        @*@Html.ActionLink("Cetak", "Cetak", "PengeluaranGudangRincians", new { id = item.SuratJalanID }, new { @class = "btn btn-xs btn-primary" })*@
                        if (item.StatusTutup)
                        {
                            @Html.ActionLink("Tutup", "Details", new { id = item.SuratJalanID }, new { @class = "btn btn-primary" })
                        }
                    }
                    else
                    {
                        @Html.ActionLink("Details", "Index", "PengeluaranGudangRincians", new { id = item.SuratJalanID }, new { @class = "btn btn-xs btn-primary" })
                        @*@Html.ActionLink("Cetak", "Cetak", "PengeluaranGudangRincians", new { id = item.SuratJalanID }, new { @class = "btn btn-xs btn-primary" })*@
                        if (item.StatusTutup)
                        {
                            @Html.ActionLink("Tutup", "Details", new { id = item.SuratJalanID }, new { @class = "btn btn-xs btn-primary" })
                        }
                    }
                  </td>
            </tr>
        }
    </tbody>
</table>
