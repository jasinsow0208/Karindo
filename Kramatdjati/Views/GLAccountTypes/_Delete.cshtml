@model Kramatdjati.Models.tblGLAccountType
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
        &times;
    </button>
    <h4>Apakah data akan dihapus?</h4>
</div>


<div>
    <div class="modal-body">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Type)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Type)
            </dd>

        </dl>
    </div>
    @using (Html.BeginForm("ModalDelete", "GLAccountTypes", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Batal</button>
            <button type="submit" id="approve-btn" class="btn btn-danger">Hapus</button>
        </div>

    }
</div>

