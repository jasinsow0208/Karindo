@model IEnumerable<Kramatdjati.Models.tblGLBatch>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutTable.cshtml";
}

<h2>Batch Jurnal Umum Posting</h2>

@using(Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal ">
        <div class="form-group">
           @Html.LabelFor(model => model.FirstOrDefault().AccYear, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("AccYear", null, htmlAttributes: new { @class = "form-control" })
             </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.FirstOrDefault().AccPeriod, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("AccPeriod", null, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Proses" class="btn btn-default" />
            </div>
        </div>
    </div>                           
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.tblGLBatchId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TglKerja)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Keterangan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TglKomputer)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.tblGLBatchId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TglKerja)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Keterangan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TglKomputer)
                </td>
                <td>
                    @Html.ActionLink("Details", "Index", "tblGLBatchDetailsReadOnly", new { id = item.tblGLBatchId }, new { @class = "btn btn-xs btn-default" })
                </td>
            </tr>
        }
    </tbody>
</table>
