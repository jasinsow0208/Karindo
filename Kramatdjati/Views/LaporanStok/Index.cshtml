@model Kramatdjati.Models.ViewReportStokParam 

@{
    ViewBag.Title = "Index";
}

<h2>Laporan Stok</h2>
<h4></h4>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
         @Html.ValidationSummary(true, "", new { @class = "text-danger" })
     
        <div class="form-group">
            @Html.LabelFor(model => model.JenisLaporanID , htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("JenisLaporanID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.JenisLaporanID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Seluruhnya , htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <label data-toggle="collapse" data-target="#Divisi">
                    @Html.CheckBoxFor(model => model.Seluruhnya )
                    @Html.ValidationMessageFor(model => model.Seluruhnya , "", new { @class = "text-danger" })
                </label>
            </div>
        </div>
        <div class="collapse" id="Divisi">
            <div class="form-group">
                @Html.LabelFor(model => model.DivisiId, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("DivisiId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.DivisiId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.DepartemenId, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @*<select id="DepartemenId" name="Departemen" class="form-control"></select>*@
                    @Html.DropDownList("DepartemenId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.DepartemenId, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Proses" class="btn btn-default" />
                </div>
            </div>
        </div>
}