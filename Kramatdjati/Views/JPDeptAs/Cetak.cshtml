@model IEnumerable<Kramatdjati.Models.JPDeptARincian>

@{
    ViewBag.Title = "Index";
}
<br />
<a href="#" class="btn btn-primary hidden-print" onclick="window.print(); return false;">Print</a>
<h2>Jadual Produksi Departemen A</h2>
<h4><b>Tgl Produksi:@ViewBag.TglProduksi</b></h4>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.KodeBarangJadi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Batch)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lembar)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Keterangan)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().resep.KodeResep)
        </th>
      </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.KodeBarangJadi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Batch)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lembar)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Keterangan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.resep.KodeResep)
            </td>
         </tr>
    }

</table>
<h4>Dibuat Oleh:@ViewBag.DibuatOleh</h4>

    <div class="form-group">
        <label for="comment">Catatan:</label>
        <textarea class="form-control" rows="5" id="comment">@ViewBag.Catatan</textarea>
    </div>

    <div class="hidden-print">
        @Html.ActionLink("Back to List", "Index", "JPDeptAs")
    </div>
