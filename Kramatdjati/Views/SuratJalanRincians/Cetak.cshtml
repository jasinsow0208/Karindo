@model IEnumerable<Kramatdjati.Models.SuratJalanRincian>

@{
    ViewBag.Title = "Index";
}
<br class="hidden-print" />
<a href="#" class="btn btn-primary hidden-print" onclick="window.print(); return false;">Print</a>
<h2 class="hidden-print">Surat Jalan</h2>

<h4 class="hidden-print"><b>Customer:@ViewBag.Customer</b></h4>
<h4 class="hidden-print">No. Surat Jalan:@ViewBag.NoSO </h4>
<h4 class="hidden-print">Tgl Transaksi:@ViewBag.TglTransaksi</h4>
<h4 class="hidden-print ">Tgl Surat Jalan:@ViewBag.TglSuratJalan</h4>

<table class="table hidden-print">
    <thead>
        <tr>
            <th>
                No
            </th>
            <th>
                @Html.DisplayNameFor(model => model.salesOrderRincian.bahanBaku.Keterangan)
            </th>
            <th>
                Banyaknya
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().salesOrderRincian.Keterangan)
            </th>
        </tr>
    </thead>
    <tbody>
        @{
            int intNo = 0;

            foreach (var item in Model)
            {
                intNo = intNo + 1;
                <tr>
                    <td>
                        @intNo
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.salesOrderRincian.bahanBaku.KodeBahanBaku )
                    </td>
                    <td>
                        @string.Format("{0:N0}", item.JumlahDikirim) @Html.DisplayFor(modelItem => item.salesOrderRincian.bahanBaku.satuan.Keterangan)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.salesOrderRincian.Keterangan)
                    </td>
                </tr>
            }
        }

    </tbody>
</table>

<div class="visible-print SectionPrint">
    <div style="height:4px"></div>
    <div class="col-xs-5 col-xs-offset-7"><font size="1"><b>@ViewBag.Customer</b></font></div>
    
    <div class="col-xs-5 col-xs-offset-2"><div class="col-xs-1"><font size="1" class="col-xs-offset-1">@ViewBag.NoSO</font></div></div>
    <div class="col-xs-4"><font size="1">@ViewBag.Alamat</font></div>
    <div class="col-xs-5 col-xs-offset-2"><div class="col-xs-1"><font size="1" class="col-xs-offset-1">@ViewBag.TglSuratJalan</font></div></div>
    <div class="col-xs-4"><font size="1">@ViewBag.Kota</font></div>
    <div style="height:116px"></div>
    @{
        int intNoVis = 0;

        foreach (var item in Model)
        {
            intNoVis = intNoVis + 1;
            <div class="col-xs-1 col-xs-offset-1 text-right"><font size="1">@intNoVis</font></div>

            <div class="col-xs-5"><font size="1">@Html.DisplayFor(modelItem => item.salesOrderRincian.bahanBaku.KodeBahanBaku )</font></div>

            <div class="col-xs-2">
                <font size="1">
                    @string.Format("{0:N0}",item.JumlahDikirim) @Html.DisplayFor(modelItem => item.salesOrderRincian.bahanBaku.satuan.Keterangan)
                </font>
            </div>
            <div class="col-xs-3"><font size="1">@Html.DisplayFor(modelItem => item.salesOrderRincian.Keterangan)</font></div>
        }
    }

</div>
<div class="hidden-print">
    @Html.ActionLink("Back to List", "Index", "SuratJalans")
</div>
