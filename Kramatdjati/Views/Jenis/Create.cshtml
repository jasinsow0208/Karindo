@using Microsoft.AspNet.Identity

@model Kramatdjati.Models.Jenis

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";

    

    if (User.Identity.Name == null || User.Identity .Name =="")
    {
        ViewBag.UserName = "Dummy";
    }
    else
    {
        ViewBag.UserName = User.Identity.Name;
    }
    
}

<h2>Tambah</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Jenis Resep</h4>
        <hr />
        @Html.HiddenFor(model => model.TglKomputer, new { Value = string.Format("{0} {1}",DateTime.Now.ToShortDateString(),DateTime.Now.ToShortTimeString() ) })
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        <div class="form-group">
            @Html.LabelFor(model => model.KodeJenis, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.KodeJenis, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.KodeJenis, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Keterangan, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Keterangan, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Keterangan, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Pembuat, htmlAttributes: new { @class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.Pembuat, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.UserName } })
                @Html.ValidationMessageFor(model => model.Pembuat, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
