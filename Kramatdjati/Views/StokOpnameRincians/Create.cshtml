@model Kramatdjati.Models.StokOpnameRincian

@{
    ViewBag.Title = "Create";
}

<h2>Tambah</h2>
<h4>Perincian Stok Opname</h4>
<hr />
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
 
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.StokOpnameID, new { Value = ViewBag.StokOpnameID })
        @Html.HiddenFor(model => model.UserInput, new { Value=ViewBag.UserInput}) 
        
        <div class="form-group">
            @Html.LabelFor(model => model.BahanBakuID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("BahanBakuID", null, htmlAttributes: new { @class = "form-control" })
                <label id="NamaBarang" class="control-label "></label>
                @Html.ValidationMessageFor(model => model.BahanBakuID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Jumlah, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @{ Html.EnableClientValidation(false); }
                @Html.EditorFor(model => model.Jumlah, new { htmlAttributes = new { @class = "form-control" } })
                <label id="Satuan" class="control-label "></label>
                @{ Html.EnableClientValidation(true); }
                @Html.ValidationMessageFor(model => model.Jumlah, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.HargaSatuan, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @{ Html.EnableClientValidation(false); }
                @Html.EditorFor(model => model.HargaSatuan, new { htmlAttributes = new { @class = "form-control" , @placeholder="Isi 0 jika tidak mengubah harga"} })
                @{ Html.EnableClientValidation(true); }
                @Html.ValidationMessageFor(model => model.HargaSatuan, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", new { Id = ViewBag.StokOpnameID })
</div>
