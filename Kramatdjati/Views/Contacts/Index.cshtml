@model IEnumerable<Kramatdjati.Models.Contact>

@{
    ViewBag.Title = "Kontak";
    Layout = "~/Views/Shared/_LayoutTable.cshtml";
}

<h2>Supplier/Customer</h2>

<p>
    @Html.ActionLink("Tambah", "Create", "Contacts", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Perusahaan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kontak)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telepon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fax)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Supplier)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Perusahaan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Kontak)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telepon)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fax)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Supplier)
                </td>
                <td>
                    @Html.ActionLink("Edit ", "Edit", "Contacts", new { id = item.ContactID }, new { @class = "btn btn-xs btn-primary" })
                    @Html.ActionLink("Detail ", "Details", "Contacts", new { id = item.ContactID }, new { @class = "btn btn-xs btn-primary" })
                    @Html.ActionLink("Hapus ", "Delete", "Contacts", new { id = item.ContactID }, new { @class = "btn btn-xs btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
