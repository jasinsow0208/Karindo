@model IEnumerable<Kramatdjati.Models.Packing>

@{
    ViewBag.Title = "Index";
}

<h2>Packing</h2>

<p>

    @Html.ActionLink("Tambah", "Create", "Packings", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Size)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JmlPerPacking)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Size)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JmlPerPacking)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.PackingID }, new { @class = "btn btn-xs btn-primary" }) 
            @Html.ActionLink("Delete", "Delete", new { id = item.PackingID }, new { @class = "btn btn-xs btn-danger" })
        </td>
    </tr>
}

</table>
