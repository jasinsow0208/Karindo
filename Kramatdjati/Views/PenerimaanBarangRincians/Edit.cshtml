@model Kramatdjati.Models.PenerimaanBarangRincian

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<h4>Perincian Penerimaan Barang</h4>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
  
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.PenerimaanBarangRincianID)
        @Html.HiddenFor(model => model.PenerimaanBarangID)

        <div class="form-group">
            @Html.LabelFor(model => model.PemesananBarangRincianID,  htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("PemesananBarangRincianID", null, htmlAttributes: new { @class = "form-control" })
                <label id="NamaBarang" class="control-label "></label>
                @Html.ValidationMessageFor(model => model.PemesananBarangRincianID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.JumlahDiTerima, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.JumlahDiTerima, new { htmlAttributes = new { @class = "form-control" } })
                <label id="Satuan" class="control-label "></label>
                @Html.ValidationMessageFor(model => model.JumlahDiTerima, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", new { Id = ViewBag.PenerimaanBarangID })
</div>
