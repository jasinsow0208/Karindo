@model Kramatdjati.Models.tblGLOpeningBalance

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<h4>Opening Balance</h4>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.tblGLOpeningBalanceId)
        @Html.HiddenFor(model => model.Posting)
        <div class="form-group">
            @Html.LabelFor(model => model.AccPeriod, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(x => x.AccPeriod, null, htmlAttributes: new { @class = "form-control" })
                @* @Html.EditorFor(model => model.AccPeriod, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.ValidationMessageFor(model => model.AccPeriod, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AccYear, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(x => x.AccYear, new SelectList(ViewBag.AccYear as System.Collections.IEnumerable, Model.AccYear), htmlAttributes: new { @class = "form-control" })
                @*        @Html.EditorFor(model => model.AccYear, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.ValidationMessageFor(model => model.AccYear, "", new { @class = "text-danger" })
            </div>
        </div>

        @*<div class="form-group">
                @Html.LabelFor(model => model.Posting, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.CheckBoxFor(model => model.Posting, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Posting, "", new { @class = "text-danger" })
                </div>
            </div>*@

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
                @Html.ActionLink("Detail", "Index", "tblGLOpeningBalanceDetails", new { id = Model.tblGLOpeningBalanceId }, new { @class = "btn btn-default" })
                @if (ViewBag.Info == "")
                {
                    @Html.ActionLink("Posting", "Posting", "tblGLOpeningBalances", new { id = Model.tblGLOpeningBalanceId }, new { @class = "btn btn-default" })
                }
                else
                {
                    <h4>@ViewBag.Info</h4>
                }
            </div>
        </div>
    </div>
}

