@model Kramatdjati.Models.JenisDetail

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Perincian Resep</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.JenisDetailID)

        <div class="form-group">
            @Html.LabelFor(model => model.JenisID, "JenisID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("JenisID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.JenisID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BahanID, "BahanID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("BahanID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.BahanID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BahanBakuID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="ui-widget">
                    <input type="text" id="searchText" name="searchText" class="form-control" value="@ViewBag.KodeBahanBaku" />
                    <label id="Keterangan" class="control-label">@ViewBag.Keterangan</label>
                    @Html.HiddenFor(model => model.BahanBakuID)
                </div>
                @Html.ValidationMessageFor(model => model.BahanBakuID, "", new { @class = "text-danger" })            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Berat, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Berat, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Berat, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BahanBaku.satuan.Keterangan, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <label class="control-label" id="Satuan">@ViewBag.Satuan</label>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Keterangan, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Keterangan, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Keterangan, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", new { id = Model.JenisID })
</div>
