@model Kramatdjati.Models.JPDeptARincian

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<h4>Pemakaian Produksi </h4>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
  
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.JPDeptARincianID)
        @Html.HiddenFor(model=>model.JPDeptAID )
        @Html.HiddenFor(model => model.KodeBarangJadi)
        @Html.HiddenFor(model => model.Batch)
        @Html.HiddenFor(model => model.Lembar)
        @Html.HiddenFor(model => model.Keterangan)
        @Html.HiddenFor(model => model.ResepID)
        @Html.HiddenFor(model => model.NoLot)
        @Html.HiddenFor(model => model.Posting)
     

        <div class="form-group">
            @Html.LabelFor(model => model.Penimbang , htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Penimbang , new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Penimbang , "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", new {TglProduksi=@ViewBag.TglProduksi })
</div>
